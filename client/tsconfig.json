{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "target": "es6",
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "lib": ["dom", "es2020", "es2015.generator"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
