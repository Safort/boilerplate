{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "just another boilerplate",
  "main": "index.js",
  "author": "Safort",
  "license": "ISC",
  "scripts": {
    "start": "node ./app/index",
    "build": "npm run build-backend && npm run build-frontend",
    "build:frontend": "webpack-cli --mode=production",
    "watch:frontend": "webpack-dev-server --mode development -w --progress",
    "build:backend": "tsc ./src/backend/index --outDir ./app",
    "watch:backend": "tsc ./src/backend/index --outDir ./app --watch",
    "lint": "eslint ./src",
    "typecheck": "tcm ./src",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.32",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/webpack-env": "^1.13.6",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^4.0.0-beta.2",
    "husky": "^1.3.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "style-loader": "^0.23.1",
    "typescript": "^3.1.6",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "cookie-parser": "^1.4.1",
    "history": "^4.7.2",
    "koa": "^2.6.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "react-redux": "^5.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  }
}
